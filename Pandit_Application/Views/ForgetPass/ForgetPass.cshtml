@model Pandit_ApplicationEntity.ForgetPassModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Collective Admin Panel a Flat Bootstrap Responsive Website Template | Home :: W3Layouts</title>

    <!-- Template CSS -->
    <link rel="stylesheet" href="~/assets/css/style-starter.css">

    <!-- google fonts -->
    <link href="//fonts.googleapis.com/css?family=Nunito:300,400,600,700,800,900&display=swap" rel="stylesheet">
    <style>
        .login-form, .register-form {
            max-width: 500px;
            margin: 0 auto;
            display: grid;
            align-items: center;
            min-height: 100vh;

        }
        .headerr {
            padding: 7px 5%;
            background: #fff;
            color: #f1f1f1;
            box-shadow: 0px 1px 20px 0px rgba(255, 136, 14, 1);
        }
    </style>
</head>
<body>
    <div>
        <div class="headerr" id="myHeader">
            <img src="~/images/header/astroho.png" style="width:140px;" alt="logo">
        </div>
        <section class="register-form py-md-5 py-3">
            <div class="card card_border p-md-4">
                <div class="card-body">
                    <!-- form -->
                    <form action="#" method="GET">
                        <div class="register__header text-left mb-4">
                            <h3 class="register__title mb-2" style="color:#ff7e00"> Forgot Password</h3>
                            <p>
                                Please enter the registered email address for your account. A reset link will be sent on your registered email.
                            </p>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1" class="input__label">Email address</label>
                            <input type="email" class="form-control login_text_field_bg input-style"
                                   id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                        <button type="submit" class="btn btn-primary btn-style mt-2">Send Recovery Password</button>
                    </form>
                    <!-- //form -->
                    <p class="backtohome mt-4">
                        @*<a href="/DefaultHome/Default" class="back">
                            <i class="fa fa-chevron-left"
                               aria-hidden="true"></i>Back to Home
                        </a>*@
                    </p>

                </div>
            </div>
        </section>
    </div>
</body>
</html>
